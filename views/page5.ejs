    /* Scrollable Picker Styling */
    .scroll-container {
      display: flex;
      justify-content: space-around;
      width: 100%;
      margin-top: 30px;
    }

    .picker {
      background-color: rgba(255, 255, 255, 0.1);
      color: white;
      padding: 20px 0;
      text-align: center;
      border-radius: 10px;
      width: 100px;
      overflow-y: scroll;
      height: 100px;
      max-height: 100px;
    }

    .picker select {
      width: 100%;
      background-color: transparent;
      color: white;
      border: none;
      font-size: 1.2rem;
      text-align: center;
    }

    .picker option {
      background-color: rgba(0, 0, 0, 0.6);
