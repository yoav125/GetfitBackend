      padding: 15px 30px;
      font-size: 1.2rem;
      text-decoration: none;
      border-radius: 5px;
      display: inline-block;
      transition: background-color 0.3s ease;
      margin-top: 30px; /* Adjust margin to move button further down */
    }

    .btn:hover {
      background-color: #4682b4;
    }

    /* Footer Links */
    .footer-links {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      justify-content: space-around;
      width: 100%;
      color: white;
      font-size: 0.9rem;
    }

    .footer-links a {
      text-decoration: none;
      color: white;
    }

    .footer-links a:hover {
      text-decoration: underline;
    }

    /* Progress Bar */
    .progress-container {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 5px;
      background-color: #ddd;
    }

    .progress-bar {
      height: 100%;
      width: 0%;
      background-color: #1e90ff;
      transition: width 0.25s ease;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .content h1 {
        font-size: 3rem;
      }

      .content p {
        font-size: 1.6rem;
      }

