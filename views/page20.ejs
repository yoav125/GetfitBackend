      font-weight: bold;
      margin-bottom: 20px;
    }

    p {
      font-size: 2rem; /* Adjusted font size */
      margin-bottom: 30px;
    }

    /* Scrollable Picker Styling */
    .scroll-container {
      display: flex;
      justify-content: center;
      width: 100%;
      margin-top: 30px;
    }

    .picker {
      background-color: rgba(255, 255, 255, 0.1);
      color: white;
      padding: 20px 0;
      text-align: center;
      border-radius: 10px;
      width: 100px;
      overflow-y: scroll;
      height: 100px;
      max-height: 100px;
      margin-right: 15px;
    }

    .picker select {
      width: 100%;
      background-color: transparent;
      color: white;
      border: none;
      font-size: 1.2rem;
      text-align: center;
    }

    .picker option {
      background-color: rgba(0, 0, 0, 0.6);
    }

    /* Next Button */
    .btn {
      background-color: #1e90ff;
      color: white;
      padding: 15px 30px;
      font-size: 1.1rem;
      text-decoration: none;
      border-radius: 5px;
      display: inline-block;
      transition: background-color 0.3s ease;
      margin-top: 30px; /* Added margin to give space between picker and button */
    }

    .btn:hover {
      background-color: #4682b4;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .content h1 {
        font-size: 3rem;
      }

      .content p {
        font-size: 1.8rem;
      }

      .btn {
        font-size: 1.1rem;
        padding: 14px 30px;
      }
    }

